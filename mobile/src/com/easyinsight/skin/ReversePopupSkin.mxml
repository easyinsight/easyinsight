<?xml version="1.0"?>
<s:SparkSkin
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:s="library://ns.adobe.com/flex/spark">

    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
        <s:State name="closed" stateGroups="closedGroup"/>
        <s:State name="disabledAndClosed" stateGroups="closedGroup"/>
    </s:states>

    <s:transitions>
        <s:Transition fromState="closed" toState="normal" autoReverse="true">
            <s:Fade duration="150" target="{chrome}"/>
        </s:Transition>

        <s:Transition fromState="disabledAndClosed" toState="disabled" autoReverse="true">
            <s:Fade duration="150" target="{chrome}"/>
        </s:Transition>

        <s:Transition fromState="normal" toState="closed" autoReverse="true">
            <s:Fade duration="150" target="{chrome}"/>
        </s:Transition>

        <s:Transition fromState="disabled" toState="disabledAndClosed" autoReverse="true">
            <s:Fade duration="150" target="{chrome}"/>
        </s:Transition>
    </s:transitions>

    <s:Group id="chrome" left="0" right="0" top="0" bottom="0" visible.closedGroup="false">

        <!-- Background and border - sets one corner rounded and adds a drop shadow filter-->
        <s:Graphic>
            <s:Path data="M 40 350
            L 20 370
            L 60 370
            L 40 350
            ">
                <s:stroke>
                    <s:SolidColorStroke color="0" alpha="1"/>
                </s:stroke>
                <s:fill>
                    <s:SolidColor color="0" alpha="1"/>
                </s:fill>
            </s:Path>
        </s:Graphic>

        <s:Rect left="0" right="0" top="0" bottom="20" id="background" topRightRadiusX="15">
            <s:filters>
                <s:DropShadowFilter color="0x000000" blurX="20" />
            </s:filters>
            <s:fill>
                <s:LinearGradient rotation="90">
                    <s:entries>
                        <s:GradientEntry color="0" alpha="1" ratio="0"/>
                        <s:GradientEntry color="0" alpha=".2" ratio=".5"/>
                    </s:entries>
                </s:LinearGradient>
            </s:fill>
            <s:stroke>
                <s:SolidColorStroke  weight="2" color="#323232" joints="bevel" alpha=".5"/>
            </s:stroke>
        </s:Rect>

        <!--- @copy spark.components.SkinnableContainer#contentGroup -->
        <s:Group id="contentGroup" left="10" right="10" top="10" bottom="30" minWidth="0" minHeight="0">
            <s:layout>
                <s:BasicLayout/>
            </s:layout>
        </s:Group>
    </s:Group>
</s:SparkSkin>
