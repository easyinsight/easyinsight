<?xml version="1.0" ?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml">
    <mx:Script><![CDATA[
        import mx.events.FlexEvent;
import mx.managers.PopUpManager;

        private var _link:String;

        [Bindable]
        public function get link():String {
            return _link;
        }

        public function set link(val:String):void {
            _link = val;
            dispatchEvent(new FlexEvent(FlexEvent.DATA_CHANGE));
        }

        private function goToURL():void {
            flash.net.navigateToURL(new URLRequest(link), "_blank");
        }
        ]]></mx:Script>
    <mx:VBox>
        <mx:Label text="Your data should now be available on Easy Insight through the following link: "/>
        <mx:LinkButton label="{link}" textDecoration="underline" click="goToURL()"/>
        <mx:Label text="Once you're happy with the query and want to promote it to run on a scheduled basis, click the Publish button which will now be available to you next to the 'Send Data to Easy Insight' button."/>
        <mx:HBox horizontalAlign="center" width="100%">
            <mx:Button label="Close" click="PopUpManager.removePopUp(this)"/>
        </mx:HBox>
    </mx:VBox>
</mx:TitleWindow>