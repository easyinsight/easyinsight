<project default="compileFlex" basedir="." name="Flex Build">
    <property file="local.build.properties"/>
    <taskdef resource="flexTasks.tasks" classpath="${flex.sdk.dir}/ant/lib/flexTasks.jar"/>


    <property name="FLEX_HOME" value="${flex.sdk.dir}"/>

    <target name="compileFlex">
        <mxmlc file="../src/PrimaryWorkspace.mxml" output="${deployment.path}/PrimaryWorkspace.swf"
               static-rsls="true" incremental="true">
            <load-config filename="../flex-config.xml"/>
        </mxmlc>
    </target>

    <target name="compileTest">
        <mxmlc file="../src/ChartTest.mxml" output="${deployment.path}/ChartTest.swf"
               static-rsls="true" incremental="true">
            <load-config filename="../flex-test.xml"/>
        </mxmlc>
    </target>

    <target name="compileFlexOptimized">
        <mxmlc file="../src/PrimaryWorkspace.mxml" output="${deployment.path}/PrimaryWorkspace.swf"
               static-rsls="false">
            <load-config filename="../core-optimized-config.xml"/>
            <runtime-shared-library-path path-element="${FLEX_HOME}/frameworks/libs/framework.swc">
                <url rsl-url="framework_3.2.0.3958.swz"/>
                <url rsl-url="framework_3.2.0.3958.swf"/>
            </runtime-shared-library-path>

            <runtime-shared-library-path path-element="${FLEX_HOME}/frameworks/libs/datavisualization.swc">
                <url rsl-url="datavisualization_3.2.0.3958.swz"/>
                <url rsl-url="datavisualization_3.2.0.3958.swf"/>
            </runtime-shared-library-path>

            <runtime-shared-library-path path-element="${FLEX_HOME}/frameworks/libs/rpc.swc">
                <url rsl-url="rpc_3.2.0.3958.swz"/>
                <url rsl-url="rpc_3.2.0.3958.swf"/>
            </runtime-shared-library-path>
        </mxmlc>
    </target>

    <target name="compileIntro">
        <mxmlc file="../src/IntroApplication.mxml" output="${deployment.path}/IntroApplication.swf"
               static-rsls="false">
            <load-config filename="../intro-config.xml"/>
            <runtime-shared-library-path path-element="${FLEX_HOME}/frameworks/libs/framework.swc">
                <url rsl-url="framework_3.2.0.3958.swz"/>
                <url rsl-url="framework_3.2.0.3958.swf"/>
            </runtime-shared-library-path>

            <runtime-shared-library-path path-element="${FLEX_HOME}/frameworks/libs/datavisualization.swc">
                <url rsl-url="datavisualization_3.2.0.3958.swz"/>
                <url rsl-url="datavisualization_3.2.0.3958.swf"/>
            </runtime-shared-library-path>

            <runtime-shared-library-path path-element="${FLEX_HOME}/frameworks/libs/rpc.swc">
                <url rsl-url="rpc_3.2.0.3958.swz"/>
                <url rsl-url="rpc_3.2.0.3958.swf"/>
            </runtime-shared-library-path>
        </mxmlc>
    </target>

    <target name="compileAdmin">
        <mxmlc file="../src/AdministrationApplication.mxml" output="${deployment.path}/AdministrationApplication.swf"
               static-rsls="true">
            <load-config filename="../administration-app.xml"/>
        </mxmlc>
    </target>

    <target name="compileRIA">
        <mxmlc file="../src/PrimaryWorkspace.mxml" output="${deployment.path}/PrimaryWorkspace.swf"
               static-rsls="true">
            <load-config filename="../riatest-core-config.xml"/>
        </mxmlc>
    </target>
</project>