<?xml version="1.0" encoding="utf-8"?>
<util:EITitleWindow xmlns:util="com.easyinsight.util.*" xmlns:mx="http://www.adobe.com/2006/mxml">
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;		
			private var connection:CompositeFeedConnection;
			
			public function set feedConnection(feedConnection:CompositeFeedConnection):void {
				this.connection = feedConnection;
				var joinDetail:JoinDetail = new JoinDetail();
				joinDetail.feedConnection = feedConnection;
				coreBox.addChild(joinDetail);
			}
			
			private function closeWindow():void {
				PopUpManager.removePopUp(this);
			}
		]]>
	</mx:Script>
	<mx:VBox paddingBottom="10" paddingLeft="10" paddingTop="10" paddingRight="10">
		<mx:VBox id="coreBox">
			
		</mx:VBox>
		<mx:HBox width="100%" horizontalAlign="center">
			<mx:Button label="Close" click="closeWindow()"/>
		</mx:HBox>		
	</mx:VBox>
</util:EITitleWindow>
