<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns="flexlib.mdi.containers.*" xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:collaboration="com.easyinsight.collaboration.*">
	<mx:Script>
		<![CDATA[
			[Bindable]
			private var sessionName:String;
			
			public function joinSession(sessionName:String):void {
				this.sessionName = sessionName;
				viewStack.selectedIndex = 1;
			}
			
			private function onCreate(event:CollaborationSetupEvent):void {
				joinSession(event.sessionName);								
			}
		]]>
	</mx:Script>
	<mx:ViewStack id="viewStack" width="100%" height="100%">
		<collaboration:CollaborationSetup id="setupPanel" startSession="onCreate(event)"/>
		<collaboration:CollaborationRoom id="collaborationRoom" sessionName="{sessionName}"/>
	</mx:ViewStack>
</mx:Panel>
