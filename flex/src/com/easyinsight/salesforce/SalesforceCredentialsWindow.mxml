<?xml version="1.0" encoding="utf-8"?>
<CredentialsWindow xmlns="com.easyinsight.analysis.*" xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
	<mx:Script>
		<![CDATA[
			import com.easyinsight.framework.Credentials;
			
			override public function get credentials():Credentials {
				var creds:SalesforceCredentials = new SalesforceCredentials();
				creds.userName = userNameInput.text;
				creds.password = passwordInput.text;
				creds.securityToken = securityToken.text;
				return creds;
			}
		]]>
	</mx:Script>
	<mx:Form>
		<mx:FormItem label="User Name: " direction="horizontal">
			<mx:TextInput id="userNameInput"/>
		</mx:FormItem>
		<mx:FormItem label="Password: " direction="horizontal">
			<mx:TextInput id="passwordInput" displayAsPassword="true"/>
		</mx:FormItem>
		<mx:FormItem label="Security Token: " direction="horizontal">
			<mx:TextInput id="securityToken" displayAsPassword="true"/>
		</mx:FormItem>
	</mx:Form>
</CredentialsWindow>
