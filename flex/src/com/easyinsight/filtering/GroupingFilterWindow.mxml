<?xml version="1.0" ?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" backgroundColor="#FFFFFF" borderThickness="1" cornerRadius="15" dropShadowEnabled="true"
        borderStyle="solid">
    <mx:Script><![CDATA[
        import com.easyinsight.analysis.AnalysisItem;

        import mx.managers.PopUpManager;

        private function addPatternMatch():void {
            var patternFilter:PatternFilter = new PatternFilter(_feedID, _item);
            dispatchEvent(new FilterCreationEvent(patternFilter));
            PopUpManager.removePopUp(this);
        }

        private function addMultiValue():void {
            var multiValFilter:MultiValueFilter = new MultiValueFilter(_feedID, _item);
            dispatchEvent(new FilterCreationEvent(multiValFilter));
            PopUpManager.removePopUp(this);
        }

        private function addComboBox():void {
            var comboBoxFilter:ComboBoxFilter = new ComboBoxFilter(_feedID, _item, 0, 0);
            dispatchEvent(new FilterCreationEvent(comboBoxFilter));
            PopUpManager.removePopUp(this);
        }

        private function addAutoComplete():void {
            var autoCompleteFilter:AutoCompleteFilter = new AutoCompleteFilter(_feedID, _item, 0, 0);
            dispatchEvent(new FilterCreationEvent(autoCompleteFilter));
            PopUpManager.removePopUp(this);
        }

        private var _item:AnalysisItem;
        private var _feedID:int;

        [Bindable]
        private var stackIndex:int;

        public function set feedID(value:int):void {
            _feedID = value;
        }

        public function set item(value:AnalysisItem):void {
            _item = value;
        }
        ]]></mx:Script>
    <mx:VBox id="coreBox" paddingTop="5" paddingBottom="5" paddingLeft="5" paddingRight="5" horizontalAlign="center" verticalGap="10">
        <mx:Label text="What type of filter do you want to create?" fontSize="16"/>
        <mx:HBox width="100%">
            <mx:VBox borderStyle="solid" borderThickness="1" cornerRadius="5" dropShadowEnabled="true" click="addComboBox()" mouseChildren="false"
                    buttonMode="true" useHandCursor="true" borderColor="#000000" horizontalAlign="center"
                    id="singleValueBox"
                    rollOver="singleValueBox.setStyle('backgroundColor', 0xDDDDDD)"
                    mouseOut="singleValueBox.setStyle('backgroundColor', 0xFFFFFF)">
                <mx:Label text="Single Value" fontSize="14"/>
                <mx:TextArea text="Restrict this field to a single value, with a dropdown box to choose the value"
                        borderStyle="none" backgroundAlpha="0" editable="false" selectable="false" width="200" height="50"
                        textAlign="center"/>
            </mx:VBox>
            <mx:VBox borderStyle="solid" borderThickness="1" cornerRadius="5" dropShadowEnabled="true" click="addMultiValue()" mouseChildren="false"
                    buttonMode="true" useHandCursor="true" borderColor="#000000" horizontalAlign="center"
                    id="multiValueBox"
                    rollOver="multiValueBox.setStyle('backgroundColor', 0xDDDDDD)"
                    mouseOut="multiValueBox.setStyle('backgroundColor', 0xFFFFFF)">
                <mx:Label text="Multi Value" fontSize="14"/>
                <mx:TextArea text="Restrict this field to a set of multiple values"
                        borderStyle="none" backgroundAlpha="0" editable="false" selectable="false" width="200" height="50"
                        textAlign="center"/>
            </mx:VBox>

        </mx:HBox>
        <mx:ViewStack resizeToContent="true" selectedIndex="{stackIndex}">
            <mx:Box>
                <mx:Button label="Show Me More Types of Filters" click="stackIndex = 1"/>
            </mx:Box>
            <mx:HBox>
                <mx:VBox borderStyle="solid" borderThickness="1" cornerRadius="5" dropShadowEnabled="true" click="addPatternMatch()" mouseChildren="false"
                    buttonMode="true" useHandCursor="true" borderColor="#000000" horizontalAlign="center"
                    id="patternValueBox"
                    rollOver="patternValueBox.setStyle('backgroundColor', 0xDDDDDD)"
                    mouseOut="patternValueBox.setStyle('backgroundColor', 0xFFFFFF)">
                <mx:Label text="Pattern Match" fontSize="14"/>
                <mx:TextArea text="Restrict this field by text patterns using wildcards or regular expressions"
                        borderStyle="none" backgroundAlpha="0" editable="false" selectable="false" width="200" height="50"
                        textAlign="center"/>
                </mx:VBox>
                <mx:VBox borderStyle="solid" borderThickness="1" cornerRadius="5" dropShadowEnabled="true" click="addAutoComplete()" mouseChildren="false"
                        buttonMode="true" useHandCursor="true" borderColor="#000000" horizontalAlign="center"
                        id="autoCompleteBox"
                        rollOver="autoCompleteBox.setStyle('backgroundColor', 0xDDDDDD)"
                        rollOut="autoCompleteBox.setStyle('backgroundColor', 0xFFFFFF)">
                    <mx:Label text="Auto Completion" fontSize="14"/>
                    <mx:TextArea text="Restrict this field to a single value, with an autocompletion text input"
                            borderStyle="none" backgroundAlpha="0" editable="false" selectable="false" width="200" height="50"
                            textAlign="center"/>
                </mx:VBox>
            </mx:HBox>
        </mx:ViewStack>
        <mx:LinkButton label="Cancel" textDecoration="underline" click="PopUpManager.removePopUp(this)"/>
    </mx:VBox>
</mx:Canvas>