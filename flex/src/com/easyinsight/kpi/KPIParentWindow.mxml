<?xml version="1.0" ?>
<util:EITitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:util="com.easyinsight.util.*"
                    xmlns:kpi="com.easyinsight.kpi.*" xmlns:framework="com.easyinsight.framework.*" width="900"
                    height="550" headerHeight="0">
    <mx:Script><![CDATA[
        import com.easyinsight.framework.ModulePerspective;
        import com.easyinsight.framework.PerspectiveInfo;

        private var _scorecardID:int;
        private var _groupID:int;
        private var _kpi:KPI;

        public function set scorecardID(value:int):void {
            _scorecardID = value;
        }

        public function set groupID(value:int):void {
            _groupID = value;
        }

        public function set kpi(value:KPI):void {
            _kpi = value;
        }

        protected override function createChildren():void {
            super.createChildren();
            addChild(new ModulePerspective(new PerspectiveInfo(PerspectiveInfo.KPI_WINDOW, {scorecardID: _scorecardID, kpi: _kpi, groupID: _groupID})));
        }]]></mx:Script>
</util:EITitleWindow>