<?xml version="1.0" ?>
<kpi:KPITutorialPanel xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:kpi="com.easyinsight.kpi.*"
        implements="com.easyinsight.kpi.ITutorialPanel">
    <mx:Script><![CDATA[
        [Bindable]
        private var highGood:int = 0;

        public function saveValues():void {
            if (highGoodOption.selected) {
                kpiData.highIsGood = 2;
            } else if (lowGoodOption.selected) {
                kpiData.highIsGood = 1;
            } else {
                kpiData.highIsGood = 0;
            }
        }

        public function validate():Boolean {
            return true;
        }

        public function gotFocus():void {
            highGood = kpiData.highIsGood;
        }]]></mx:Script>
    <mx:VBox width="100%" height="100%" verticalGap="0">
        <mx:Box height="50%" width="100%"  backgroundColor="#000000" horizontalAlign="center" verticalAlign="middle">
            <mx:Text text="Are high values of this KPI good?" fontSize="24" color="#FFFFFF"/>
        </mx:Box>
        <mx:VBox verticalAlign="middle" horizontalAlign="center" height="50%" width="100%" backgroundColor="#FFFFFF">
            <mx:VBox>
                <mx:RadioButtonGroup id="goalGroup"/>
                <mx:RadioButton label="High Values are Good" value="highGoodRadio"
                                group="{goalGroup}"
                                selected="{highGood == 2}" id="highGoodOption" fontSize="18"/>
                <mx:RadioButton label="Low Values are Good" value="lowGoodRadio"
                        group="{goalGroup}"
                        selected="{highGood == 1}" id="lowGoodOption" fontSize="18"/>
                <mx:RadioButton label="Neither" value="undefinedRadio"
                        group="{goalGroup}"
                        selected="{highGood == 0}" id="undefinedOption" fontSize="18"/>
            </mx:VBox>
        </mx:VBox>
    </mx:VBox>
</kpi:KPITutorialPanel>