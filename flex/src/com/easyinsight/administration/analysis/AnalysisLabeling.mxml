<?xml version="1.0" encoding="utf-8"?>
<AnalysisTabWindow xmlns="com.easyinsight.administration.analysis.*" xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300">
	<mx:Script>
		<![CDATA[
			override public function updateState():void {
				analysisState.title = titleInput.text;
				analysisState.genre = genreInput.text;
				analysisState.tagCloud.fromString(tagsInput.text);
			}
		]]>
	</mx:Script>	
	<mx:Form>
		<mx:FormItem label="Title" direction="horizontal">
			<mx:TextInput id="titleInput" text="{analysisState.title}"/>
		</mx:FormItem>
		<mx:FormItem label="Genre" direction="horizontal">
			<mx:TextInput id="genreInput" text="{analysisState.genre}"/>			
		</mx:FormItem>
		<mx:FormItem label="Tags" direction="horizontal">
			<mx:TextInput id="tagsInput" text="{analysisState.tagCloud}"/>			
		</mx:FormItem>
	</mx:Form>	
</AnalysisTabWindow>
