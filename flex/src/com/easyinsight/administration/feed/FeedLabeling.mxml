<?xml version="1.0" encoding="utf-8"?>
<feed:FeedTabWindow xmlns:feed="com.easyinsight.administration.feed.*" xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
	<mx:Script>
		<![CDATA[
			override public function updateState():void {
				feedState.feedName = nameInput.text;
				feedState.tagCloud.fromString(tagsInput.text);
			}
			
			private function createString():void {
				var tagString:String = "";
				for (var i:int = 0; i < feedState.tagCloud.tags.length; i++) {
					var tag:String = feedState.tagCloud.tags.getItemAt(i) as String;
					tagString += tag + " ";
				}
				tagsInput.text = tagString;				
			}
		]]>
	</mx:Script>	
	<mx:Form width="100%">
		<mx:FormItem label="Name" direction="horizontal">
			<mx:TextInput id="nameInput" text="{feedState.feedName}"/>
		</mx:FormItem>
		<mx:FormItem label="Tags" direction="horizontal" width="100%">
			<mx:TextInput id="tagsInput" text="{feedState.tagCloud}" width="100%"/>			
		</mx:FormItem>
	</mx:Form>	
</feed:FeedTabWindow>
