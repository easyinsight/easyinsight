<?xml version="1.0" ?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:scorecard="com.easyinsight.scorecard.*"
         xmlns:listing="com.easyinsight.listing.*" width="100%" backgroundColor="#818285" horizontalAlign="center"
         height="100%" implements="com.easyinsight.listing.IPerspective">
    <mx:states>
        <mx:State name="noData">
            <mx:RemoveChild target="{scorecardBox}"/>
            <mx:AddChild>
                <listing:MyNoData/>
            </mx:AddChild>
        </mx:State>
    </mx:states>
    <mx:Script><![CDATA[
        import mx.managers.BrowserManager;
        import mx.utils.URLUtil;

        public function gotFocus():void {
            /*if (currentState == "noData") {
                scorecardDisplay.gotFocus();
            }*/
            var fragmentObject:Object = new Object();
            fragmentObject.page = "kpis";
            BrowserManager.getInstance().setTitle("Easy Insight - KPIs");
            var fragmentString:String = URLUtil.objectToString(fragmentObject);
            BrowserManager.getInstance().setFragment(fragmentString);
            scorecardDisplay.gotFocus();
        }

        public function cleanup():void {
        }
        ]]></mx:Script>
    <mx:Canvas width="1000" backgroundColor="#FFFFFF" height="100%"
             id="scorecardBox">
        <scorecard:ScorecardUserDisplay id="scorecardDisplay" noData="currentState='noData'" gotData="currentState=''"/>
    </mx:Canvas>
</mx:HBox>