<?xml version="1.0" ?>
<solutions:SolutionDetailRenderer xmlns:mx="http://www.adobe.com/2006/mxml"
                                  xmlns:solutions="com.easyinsight.solutions.*"
         width="100%" height="100%" paddingLeft="0" paddingBottom="0" paddingTop="0" paddingRight="0"
         verticalGap="0" backgroundColor="#818285" horizontalAlign="center">
    <mx:Script><![CDATA[

        override protected function toAccountBelowRequiredState():void {
            currentState = "AccountBelowRequired";
        }
        ]]></mx:Script>
    <mx:HBox width="1000" height="100%" backgroundColor="#FFFFFF" paddingLeft="20"
             paddingRight="20" paddingTop="20" paddingBottom="20" horizontalAlign="center">
            <mx:VBox width="900" backgroundColor="#FFFFFF" borderColor="#3370ce" borderThickness="3" cornerRadius="15" borderStyle="solid"
                    paddingTop="20" paddingBottom="20" paddingLeft="20" paddingRight="20">
                <mx:HBox verticalAlign="middle" width="100%">
                    <mx:Image source="{logo}" click="toVendorPage()"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="Why Use Easy Insight with Constant Contact?" fontSize="18"/>
                    <mx:Spacer width="100%"/>
                </mx:HBox>
                <mx:HRule width="100%" strokeColor="#3370ce"/>
                <mx:TextArea backgroundAlpha="0" borderStyle="none" editable="false" selectable="false" width="820" height="70" text="Want the ability to perform custom Constant Contact reporting? Whether it's simple reports on email activity or in depth business conversion rate analysis, Easy Insight can get you that visibility in a couple of clicks! If you don't already have an account, you can get started with a 30 day free trial with no obligation." fontSize="14"/>
                <mx:HBox width="100%" horizontalAlign="center" paddingBottom="10">
                    <mx:Image source="../assets/SendGrid.jpg"/>
                </mx:HBox>
                <mx:TextArea backgroundAlpha="0" borderStyle="none" editable="false" selectable="false" width="820" height="50" text="Measure your conversion rates. Filter by campaign, join your campaigns to other data sources, and view as lists, trees, charts, or more. Share the reports with your coworkers or embed them into iGoogle or another dashboard." fontSize="14"/>
                <mx:Box id="controlsBox" width="100%" horizontalAlign="center">
                    <mx:Button label="Get Started Now!" fontSize="18" click="installSolution()" styleName="blueButton"
                               id="installButton"/>
                </mx:Box>
            </mx:VBox>
    </mx:HBox>
</solutions:SolutionDetailRenderer>