<?xml version="1.0"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" horizontalAlign="center" verticalGap="0">
    <mx:Script><![CDATA[
        [Bindable]
        public var current:String;

        [Bindable]
        public var total:String;

        [Bindable]
        public var typeLabel:String;
        ]]></mx:Script>
    <mx:HBox verticalAlign="middle">
        <mx:Label text="{current}" fontSize="20"/>
        <mx:Label text="/"/>
        <mx:Label text="{total}" fontSize="20"/>
    </mx:HBox>
    <mx:Label text="{typeLabel}" fontSize="16"/>
</mx:VBox>
