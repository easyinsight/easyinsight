<?xml version="1.0" ?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml">
    <mx:Script><![CDATA[
        import mx.collections.ArrayCollection;

        [Bindable]
        private var accounts:ArrayCollection;
]]></mx:Script>
    <mx:DataGrid dataProvider="{accounts}">
        <mx:columns>
            <mx:DataGridColumn dataField="name" headerText="Name"/>
            <mx:DataGridColumn dataField="name" headerText="Type" itemRenderer="com.easyinsight.account.AccountTypeRenderer"/>
            <mx:DataGridColumn dataField="name" sortable="false" headerText="" itemRenderer="com.easyinsight.account.AccountActions"/>
        </mx:columns>
    </mx:DataGrid>
</mx:VBox>