<?xml version="1.0" encoding="utf-8"?>
<skin:BackgroundImage xmlns:mx="http://www.adobe.com/2006/mxml"
                      implements="com.easyinsight.listing.IPerspective"
                      xmlns:skin="com.easyinsight.skin.*">
    <mx:Script>
		<![CDATA[
        import com.easyinsight.util.ProgressAlert;

        import mx.managers.BrowserManager;
        import mx.utils.URLUtil;

        public function gotFocus():void {
            var fragmentObject:Object = new Object();
            fragmentObject.page = "help";
            BrowserManager.getInstance().setTitle("Easy Insight - Help");
            var fragmentString:String = URLUtil.objectToString(fragmentObject);
            BrowserManager.getInstance().setFragment(fragmentString);
            if (text == null) {
                ProgressAlert.alert(this, "Getting docs...", null, analysisService.getBaseDocs);
                analysisService.getBaseDocs.send();
            }
        }

        public function cleanup():void {
        }

        private function gotDocs():void {
            text = analysisService.getBaseDocs.lastResult as String;
        }

        [Bindable]
        private var text:String;
        ]]>
    </mx:Script>
    <mx:RemoteObject id="analysisService" destination="analysisDefinition">
        <mx:method name="getBaseDocs" result="gotDocs()"/>
    </mx:RemoteObject>
    <mx:VBox width="100%" height="100%" horizontalAlign="center" paddingTop="20">
        <mx:Box paddingLeft="10" paddingRight="10"
                borderStyle="solid" cornerRadius="8" borderThickness="1" dropShadowEnabled="true"
                backgroundColor="#FFFFFF" paddingTop="5" paddingBottom="5">
            <mx:Text width="400" htmlText="{text}" styleName="fallThroughFonts" fontSize="14"/>
        </mx:Box>
    </mx:VBox>
