        paddingTop="0" top="0">
    <mx:Script>
		<![CDATA[
        import com.easyinsight.framework.NavigationEvent;
        import com.easyinsight.help.ScreencastWindow;

        import com.easyinsight.tour.TourWindow;
        import com.easyinsight.util.PopUpUtil;

        import mx.collections.ArrayCollection;
        import mx.managers.PopUpManager;

        [Bindable]
        [Embed(source="../../../../assets/headericons/chart_area.png")]
        private var myDataIcon:Class;

        [Bindable]
        [Embed(source="../../../../assets/headericons/shopping_bag.png")]
        private var catalogIcon:Class;

        [Bindable]
        [Embed(source="../../../../assets/background2.JPG")]
        private var background2:Class;

        [Bindable]
        [Embed(source="../../../../assets/headericons/users2.png")]
        private var groupsIcon:Class;

        [Bindable]
        [Embed(source="../../../../assets/headericons/components.png")]
        private var solutionsIcon:Class;

        [Bindable]
        [Embed(source="../../../../assets/headericons/branch.png")]
        private var goalsIcon:Class;

        [Bindable]
        [Embed(source="../../../../assets/headericons/application_enterprise.png")]
        private var apiIcon:Class;

        [Bindable]
        [Embed(source="../../../../assets/media_play.png")]
        private var pointerIcon:Class;

        private var _tour:Boolean;

        public function get tour():Boolean {
            return _tour;
        }

        public function set tour(value:Boolean):void {
            _tour = value;
            if(_tour)
                lesson1();
        }

        private function toMarketplace():void {
            dispatchEvent(new NavigationEvent("Marketplace"));
        }

        private function toUploads():void {
            dispatchEvent(new NavigationEvent("My Data"));
        }

        private function toSolutions():void {
            dispatchEvent(new NavigationEvent("Solutions"));
        }

        private function toGroups():void {
            dispatchEvent(new NavigationEvent("Groups"));
        }

        private function toAPI():void {
            dispatchEvent(new NavigationEvent("API"));
        }

        private function toGoals():void {
            dispatchEvent(new NavigationEvent("My Goals"));
        }

        private function lesson1():void {
            var tourWindow:TourWindow = new TourWindow();
            PopUpManager.addPopUp(tourWindow, this);
            PopUpUtil.centerPopUp(tourWindow);
        }

        private function apilesson():void {
            var window:ScreencastWindow = new ScreencastWindow();
            window.screencastSource = "../assets/uncheckedjavaapilesson/API Lesson.mp4";
            PopUpManager.addPopUp(window, this);
            window.x = 300;
            window.y = 200;
        }

        [Bindable]
        private var logos:ArrayCollection = new ArrayCollection(["../assets/logos/Basecamp Logo.png",
            "../assets/logos/Google Analytics Logo.gif", "../assets/logos/Google Docs Logo.gif",
            "../assets/logos/JIRA Logo.gif", "../assets/logos/MySQL Logo.gif", "../assets/logos/Oracle Logo.gif",
            "../assets/logos/SQL Server Logo.gif", null]);

        private function appSolutions():void {
            var properties:Object = { saas: true, client:true, biz: false, learning: false };
            dispatchEvent(new NavigationEvent("Solutions", null, properties));
        }

        private function bizSolutions():void {
            var properties:Object = { biz: true, client:false, saas: false, learning: false };
            dispatchEvent(new NavigationEvent("Solutions", null, properties));
        }

        private function showSecurityStatement():void {
            var window:SecurityStatement = new SecurityStatement();
            PopUpManager.addPopUp(window, this, true);
            PopUpUtil.centerPopUp(window);
        }

        private function showTermsOfService():void {
            var window:TermsOfService = new TermsOfService();
            PopUpManager.addPopUp(window, this, true);
            PopUpUtil.centerPopUp(window);
        }

        private function showPrivacyPolicy():void {
            var window:PrivacyPolicy = new PrivacyPolicy();
            PopUpManager.addPopUp(window, this, true);
            PopUpUtil.centerPopUp(window);
        }
		]]>
    </mx:Script>
