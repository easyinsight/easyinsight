<?xml version="1.0" ?>
<feed:DataSourceWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:util="com.easyinsight.util.*" width="100%"
                       height="100%"

                       xmlns:feed="com.easyinsight.administration.feed.*">
    <mx:Metadata>
		[Event(name="userConfigComplete", type="com.easyinsight.customupload.UploadConfigEvent")]
		[Event(name="userConfigCancel", type="com.easyinsight.customupload.UploadConfigEvent")]
	</mx:Metadata>
    <mx:Script><![CDATA[
        import com.easyinsight.administration.feed.FeedDefinitionData;

        import mx.managers.PopUpManager;

        [Bindable]
        private var url:String;
        [Bindable]
        private var includeComments:Boolean;
        [Bindable]
        private var limitedRetrieval:Boolean;

        [Bindable]
        private var usernameInputText:String;

        [Bindable]
        private var apiKeyInputText:String;


        override protected function gotSource():void {
            var ds:ZendeskDataSource = dataSource as ZendeskDataSource;
            url = ds.url;
            includeComments = ds.loadComments;
            usernameInputText = ds.zdUserName;
            apiKeyInputText = ds.zdApiKey;
            limitedRetrieval = ds.limited;
        }

        private function save():void {
            var ds:ZendeskDataSource = dataSource as ZendeskDataSource;
            ds.url = urlInput.text;
            ds.loadComments = includeComments;
            ds.zdUserName = userNameInput.text;
            ds.zdApiKey = passwordInput.text;
            ds.limited = limitedCheckbox.selected;
            saveSource();
        }


        private function inactiveCheckbox_changeHandler(event:Event):void {
            includeComments = commentsCheckbox.selected;
        }
        ]]></mx:Script>
    <mx:HBox paddingTop="10">
        <mx:Label text="Zendesk URL:" width="225" textAlign="right" fontFamily="Tahoma" fontWeight="bold"/>
        <mx:TextInput id="urlInput" fontWeight="normal" fontFamily="Lucida Grande" text="{url}" width="350"/>
    </mx:HBox>
    <mx:Form paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10">
            <mx:FormItem label="Include Comments:" direction="horizontal">
                <mx:CheckBox id="commentsCheckbox" selected="{includeComments}" change="inactiveCheckbox_changeHandler(event)"/>
                <mx:Label text="What is this?" fontSize="10" textDecoration="underline" toolTip="Check this box to enable comment synchronization."/>
            </mx:FormItem>
    </mx:Form>
    <mx:Form paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10">
        <mx:FormItem label="Limited Retrieval:" direction="horizontal">
            <mx:CheckBox id="limitedCheckbox" selected="{limitedRetrieval}"/>
            <mx:Label text="What is this?" fontSize="10" textDecoration="underline" toolTip="If selected, Easy Insight will not pull audit information about your tickets from Zendesk, dramatically speeding up synchronization times."/>
        </mx:FormItem>
    </mx:Form>
    <mx:TextArea width="700" text="Your Zendesk URL is the browser URL you normally use to connect to Zendesk. For example, if you access Zendesk as yourcompanyname.zendesk.com, put yourcompanyname in as the Zendesk URL."
            editable="false" selectable="false" focusEnabled="false" fontSize="12"/>
    <mx:HBox>
        <mx:Label text="Zendesk Email:" width="225" textAlign="right" fontFamily="Tahoma" fontWeight="bold"/>
        <mx:TextInput id="userNameInput" fontWeight="normal" fontFamily="Lucida Grande" text="{usernameInputText}" width="350"/>
    </mx:HBox>
    <mx:HBox>
        <mx:Label text="Zendesk API Key:" width="225" textAlign="right" fontFamily="Tahoma" fontWeight="bold"/>
        <mx:TextInput id="passwordInput" text="{apiKeyInputText}" width="350"/>
    </mx:HBox>
    <mx:HBox>
        <util:SaveButton label="Save" click="save()"/>
        <util:CancelButton label="Cancel" click="PopUpManager.removePopUp(this)"/>
    </mx:HBox>
</feed:DataSourceWindow>