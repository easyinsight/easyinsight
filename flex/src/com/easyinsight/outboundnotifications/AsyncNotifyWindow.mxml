<?xml version="1.0" ?>
<util:EITitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:util="com.easyinsight.util.*"
                showCloseButton="true" close="PopUpManager.removePopUp(this);" title="Background Tasks"
        removedEffect="{dissolveOut}" creationCompleteEffect="{dissolveIn}" showEffect="{dissolveIn}" creationComplete="onCreationComplete()" >
    <mx:Script><![CDATA[
        import com.easyinsight.genredata.AnalyzeEvent;
        import com.easyinsight.genredata.AsyncWindowAnalyzeEvent;

        import mx.collections.ArrayCollection;
        import mx.managers.PopUpManager;


        private function onModuleAnalyze(event:AsyncWindowAnalyzeEvent):void {
            dispatchEvent(new AnalyzeEvent(event.analyzeSource));
            PopUpManager.removePopUp(this);
        }

        private function onCreationComplete():void {
            addEventListener(AsyncWindowAnalyzeEvent.ASYNC_WINDOW_ANALYZE, onModuleAnalyze);
        }

        [Bindable]
            private var _data:ArrayCollection;

        [Bindable]
        private var rowCount:int = 1;

            [Bindable("dataChange")]
            [Inspectable(environment="none")]

            override public function get data():Object {
                return _data;
            }

            override public function set data(value:Object):void {
                this._data = value as ArrayCollection;
                if (this._data != null) {
                    rowCount = this._data.length + 1;
                }
            }



            ]]></mx:Script>
    <mx:Dissolve id="dissolveOut" duration="500" alphaFrom="1.0" alphaTo="0.0"/>
    <mx:Dissolve id="dissolveIn" duration="500" alphaFrom="0.0" alphaTo="1.0"/>
    <mx:VBox>
        <mx:DataGrid dataProvider="{_data}" rowHeight="30">
            <mx:columns>
                <util:EIDataGridColumn headerText="Name" dataField="feedName" itemRenderer="com.easyinsight.outboundnotifications.DataSourceNameColumnRender" />
                <util:EIDataGridColumn headerText="" dataField="dataSourceID" sortable="false"
                                       itemRenderer="com.easyinsight.outboundnotifications.NotificationProgressColumnControls" width="150"/>
            </mx:columns>
        </mx:DataGrid>
    </mx:VBox>
</util:EITitleWindow>