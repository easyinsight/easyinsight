<?xml version="1.0" encoding="utf-8"?>
<util:EITitleWindow xmlns:util="com.easyinsight.util.*" xmlns:mx="http://www.adobe.com/2006/mxml" backgroundColor="#FFFFFF"
	creationComplete="dashboardService.getDashboards.send()">
	<mx:Script>
		<![CDATA[
        import com.easyinsight.dashboard.DashboardDescriptor;

        import mx.collections.ArrayCollection;
        import mx.collections.Sort;
        import mx.collections.SortField;
        import mx.managers.PopUpManager;

        [Bindable]
        private var descriptors:ArrayCollection;

        private var _groupID:int;


        public function set groupID(val:int):void {
            _groupID = val;
        }

        private function gotDashboards():void {
            var descriptors:ArrayCollection = dashboardService.getDashboards.lastResult as ArrayCollection;
            var sort:Sort = new Sort();
            sort.fields = [ new SortField("name", true) ];
            descriptors.sort = sort;
            descriptors.refresh();
            this.descriptors = descriptors;
        }

        private function chose():void {
            var descriptor:DashboardDescriptor = feedBox.selectedItem as DashboardDescriptor;
            dispatchEvent(new DescriptorAccountEvent(DescriptorAccountEvent.ADD, descriptor));
            PopUpManager.removePopUp(this);
        }

        private function cancel():void {
            PopUpManager.removePopUp(this);
        }
        ]]>
	</mx:Script>
	<mx:RemoteObject destination="dashboardService" id="dashboardService">
		<mx:method name="getDashboards" result="gotDashboards()"/>
	</mx:RemoteObject>
    <mx:VBox>
        <mx:Form>
            <mx:FormItem label="Choose a Dashboard:">
                <mx:ComboBox id="feedBox" dataProvider="{descriptors}" selectedIndex="0" labelField="name"/>
            </mx:FormItem>
        </mx:Form>
        <mx:HBox width="100%" horizontalAlign="center">
            <util:SaveButton label="Add this Report" click="chose()"/>
            <util:CancelButton label="Cancel" click="cancel()"/>
        </mx:HBox>
    </mx:VBox>
</util:EITitleWindow>
