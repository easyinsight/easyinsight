<?xml version="1.0" ?>
<feed:DataSourceWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:util="com.easyinsight.util.*" width="100%"
                       height="100%"
                       label="Flat File Configuration" xmlns:feed="com.easyinsight.administration.feed.*">
    <mx:Script><![CDATA[

        import mx.managers.PopUpManager;

        [Bindable]
        private var url:String;
        [Bindable]
        private var jsonPath:String;
        [Bindable]
        private var jsonUserName:String;
        [Bindable]
        private var jsonPassword:String;
        [Bindable]
        private var httpValue:String;

        override protected function gotSource():void {
            var ds:FileBasedFeedDefinition = dataSource as FileBasedFeedDefinition;
            if (ds.uploadFormat is ExcelUploadFormat) {
                selectedFormat = "Excel 2003";
            } else if (ds.uploadFormat is XSSFExcelUploadFormat) {
                selectedFormat = "Excel";
            } else if (ds.uploadFormat is CsvFileUploadFormat) {
                selectedFormat = "CSV";
            }
            url = ds.url;
            jsonUserName = ds.userName;
            jsonPassword = ds.password;
            httpValue = String(ds.httpMethod);
        }

        private function save():void {
            var ds:FileBasedFeedDefinition = dataSource as FileBasedFeedDefinition;
            ds.url = urlInput.text;
            ds.httpMethod = int(methodGroup.selectedValue);
            ds.userName = userNameInput.text;
            ds.password = passwordInput.text;
            if (formatBox.selectedItem == "Excel") {
                ds.uploadFormat = new XSSFExcelUploadFormat();
            } else if (formatBox.selectedItem == "Excel 2003") {
                ds.uploadFormat = new ExcelUploadFormat();
            } else if (formatBox.selectedItem == "CSV") {
                ds.uploadFormat = new CsvFileUploadFormat();
            }
            saveSource();
        }

        [Bindable]
        private var selectedFormat:String;
        ]]></mx:Script>
    <mx:Form paddingTop="20">
        <mx:FormItem label="Format:">
            <mx:ComboBox id="formatBox" selectedItem="{selectedFormat}">
                <mx:dataProvider>
                    <mx:ArrayCollection>
                        <mx:Array>
                            <mx:String>Excel</mx:String>
                            <mx:String>Excel 2003</mx:String>
                            <mx:String>CSV</mx:String>
                        </mx:Array>
                    </mx:ArrayCollection>
                </mx:dataProvider>
            </mx:ComboBox>
        </mx:FormItem>
    </mx:Form>
    <mx:TextArea text="You can set up your flat file data source to pull from a remote location instead of having to upload the spreadsheet or CSV every time yourself." borderStyle="none" editable="false" width="650" height="50" fontSize="11"/>
    <mx:Form>
        <mx:FormItem label="File Download URL:" fontFamily="Tahoma" fontWeight="bold">
            <mx:TextInput id="urlInput" fontWeight="normal" fontFamily="Lucida Grande" text="{url}" width="350"/>
        </mx:FormItem>
        <mx:FormItem label="Basic Auth User Name (optional):" fontFamily="Tahoma" fontWeight="bold">
            <mx:TextInput id="userNameInput" fontWeight="normal" fontFamily="Lucida Grande" text="{jsonUserName}" width="350"/>
        </mx:FormItem>
        <mx:FormItem label="Basic Auth Password (optional):" fontFamily="Tahoma" fontWeight="bold">
            <mx:TextInput id="passwordInput" displayAsPassword="true" fontWeight="normal" fontFamily="Lucida Grande" text="{jsonPassword}" width="350"/>
        </mx:FormItem>
        <mx:FormItem label="HTTP Method:" fontFamily="Tahoma" fontWeight="bold" direction="horizontal">
            <mx:RadioButtonGroup id="methodGroup" selectedValue="{httpValue}"/>
            <mx:RadioButton groupName="methodGroup" label="GET" value="1" id="getOption"/>
            <mx:RadioButton groupName="methodGroup" label="POST" value="2" id="postOption"/>
        </mx:FormItem>
    </mx:Form>
    <mx:HBox>
        <util:SaveButton label="Save" click="save()"/>
        <util:CancelButton label="Cancel" click="PopUpManager.removePopUp(this)"/>
    </mx:HBox>
</feed:DataSourceWindow>