<?xml version="1.0" ?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" implements="com.easyinsight.customupload.IServerDataSourceCreation">
    <mx:Metadata>
		[Event(name="userConfigComplete", type="com.easyinsight.customupload.UploadConfigEvent")]
		[Event(name="userConfigCancel", type="com.easyinsight.customupload.UploadConfigEvent")]
	</mx:Metadata>
    <mx:Script><![CDATA[
        import com.easyinsight.administration.feed.FeedDefinitionData;
        import com.easyinsight.datasources.HighRiseDataSource;
        import com.easyinsight.framework.Credentials;
        import com.easyinsight.framework.CredentialsCache;

        [Bindable]
        private var url:String;
        [Bindable]
        private var usernameInputText:String;
        [Bindable]
        private var passwordText:String;

        public function get dataSourceDefinition():FeedDefinitionData {
            var obj:HighRiseDataSource = new HighRiseDataSource();
            obj.url = urlInput.text;
            obj.includeEmails = emailsCheckbox.selected;
            return obj;
        }

        public function set dataSourceDefinition(feedDefinition:FeedDefinitionData):void {
            var ds:HighRiseDataSource = feedDefinition as HighRiseDataSource;
            includeEmails = ds.includeEmails;
            CredentialsCache.getCache().nukeCredentials(ds.dataFeedID);
            url = ds.url;
            usernameInputText = ds.username;
            passwordText = ds.password;
        }

        public function updateDataSource(feedDefinition:FeedDefinitionData):void {
            var ds:HighRiseDataSource = feedDefinition as HighRiseDataSource;
            ds.url = urlInput.text;
            ds.includeEmails = emailsCheckbox.selected;
        }

        public function get credentials():Credentials {
            var credentials:Credentials = new Credentials();
            credentials.userName = userNameInput.text;
            credentials.password = "x";
            return credentials;
        }

        public function set credentials(c:Credentials):void {
            usernameInputText = c.userName;
            passwordText = c.password;
        }

        [Bindable]
        private var includeEmails:Boolean;


        public function get savesCredentials():Boolean {
            return false;
        }

        public function validate():Boolean {
            return true;
        }]]></mx:Script>
    <mx:Form>
        <mx:FormItem label="Highrise Path: " direction="horizontal" fontWeight="bold" fontFamily="Tahoma">
			<mx:TextInput id="urlInput" fontWeight="normal" fontFamily="Lucida Grande" text="{url}" width="350"/>
		</mx:FormItem>
        <mx:FormItem label="Example: &quot;easyinsight&quot; for &quot;easyinsight.highrisehq.com&quot;" fontSize="10"/>
		<mx:FormItem label="Highrise API Authentication Token: " direction="horizontal" fontWeight="bold" fontFamily="Tahoma">
			<mx:TextInput id="userNameInput" fontWeight="normal" fontFamily="Lucida Grande" text="{usernameInputText}" width="350"/>
		</mx:FormItem>
        <mx:FormItem label="You can find the token on your Highrise page under My Info - API Token." fontSize="10"/>
        <mx:FormItem label="Include Emails:" direction="horizontal">
            <mx:CheckBox id="emailsCheckbox" selected="{includeEmails}"/>
            <mx:Label text="What is this?" fontSize="10" textDecoration="underline" toolTip="We haven't figured out a really efficient way to synchronize with email data on Highrise yet, so unless you absolutely need to report on emails, we recommend you leave this setting off."/>
        </mx:FormItem>
	</mx:Form>
</mx:VBox>