<?xml version="1.0" ?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" implements="com.easyinsight.kpi.ITutorialPanel" horizontalAlign="center"
         verticalAlign="middle"
        creationComplete="validators = [ nameValidator ]; dsNameInput.setFocus()" width="100%" height="100%">
    <mx:Script><![CDATA[
        import mx.validators.Validator;

        private var validators:Array;

        public var dataSourceName:String = "";
        public var accountVisible:Boolean = false;
        
        public function saveValues():void {
            dataSourceName = dsNameInput.text;
            accountVisible = shareCheckbox.selected;
        }

        public function validate():Boolean {
            var results:Array = Validator.validateAll(validators);
            if (results.length > 0) {
                dsNameInput.setFocus();
                dsNameInput.dispatchEvent(new MouseEvent(MouseEvent.MOUSE_OVER));
                return false;
            } else {
                return true;
            }
        }

        public function gotFocus():void {
        }]]></mx:Script>
    <mx:Label text="What do you want to name this data source?" fontSize="20"/>
    <mx:TextInput id="dsNameInput" fontSize="22" width="400"/>
    <mx:Spacer height="50"/>
    <mx:Label text="Should this data source be visible to all users in the account?" fontSize="22"/>
    <mx:CheckBox id="shareCheckbox" fontSize="20" selected="true" label="Visible to All Users"/>
    <mx:StringValidator id="nameValidator" minLength="3" maxLength="30" property="text" source="{dsNameInput}"/>
</mx:VBox>