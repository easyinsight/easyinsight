<?xml version="1.0" ?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" implements="com.easyinsight.customupload.IServerDataSourceCreation">
    <mx:Metadata>
		[Event(name="userConfigComplete", type="com.easyinsight.customupload.UploadConfigEvent")]
		[Event(name="userConfigCancel", type="com.easyinsight.customupload.UploadConfigEvent")]
	</mx:Metadata>
    <mx:Script><![CDATA[
        import com.easyinsight.administration.feed.FeedDefinitionData;
        import com.easyinsight.datasources.CampaignMonitorDataSource;

        [Bindable]
        private var urlInputText:String;

        public function get dataSourceDefinition():FeedDefinitionData {
            return new CampaignMonitorDataSource();
        }

        public function set dataSourceDefinition(feedDefinition:FeedDefinitionData):void {
            var ds:CampaignMonitorDataSource = feedDefinition as CampaignMonitorDataSource;
            urlInputText = ds.url;
        }

        public function get savesCredentials():Boolean {
            return false;
        }

        public function updateDataSource(feedDefinition:FeedDefinitionData):void {
            var ds:CampaignMonitorDataSource = feedDefinition as CampaignMonitorDataSource;
            ds.url = urlInput.text;
            ds.cmUserName = userNameInput.text;
            ds.cmPassword = passwordInput.text;
        }

        public function validate():Boolean {
            return true;
        }
        ]]></mx:Script>
    <mx:Form>
        <mx:FormItem label="Campaign Monitor URL:" direction="horizontal" fontWeight="bold" fontFamily="Tahoma">
			<mx:TextInput id="urlInput" fontWeight="normal" fontFamily="Lucida Grande" text="{urlInputText}"/>
		</mx:FormItem>
		<mx:FormItem label="Campaign Monitor User Name:" direction="horizontal" fontWeight="bold" fontFamily="Tahoma">
			<mx:TextInput id="userNameInput" fontWeight="normal" fontFamily="Lucida Grande"/>
		</mx:FormItem>
        <mx:FormItem label="Campaign Monitor Password:" direction="horizontal" fontWeight="bold" fontFamily="Tahoma">
			<mx:TextInput id="passwordInput" displayAsPassword="true" fontWeight="normal" fontFamily="Lucida Grande"/>
		</mx:FormItem>
	</mx:Form>
</mx:HBox>