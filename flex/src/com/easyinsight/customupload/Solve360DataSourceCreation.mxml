<?xml version="1.0" ?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" implements="com.easyinsight.customupload.IServerDataSourceCreation">
    <mx:Metadata>
		[Event(name="userConfigComplete", type="com.easyinsight.customupload.UploadConfigEvent")]
		[Event(name="userConfigCancel", type="com.easyinsight.customupload.UploadConfigEvent")]
	</mx:Metadata>
    <mx:Script><![CDATA[
        import com.easyinsight.administration.feed.FeedDefinitionData;
        import com.easyinsight.datasources.KashooCompositeDataSource;
        import com.easyinsight.datasources.PivotalTrackerBaseSource;
        import com.easyinsight.datasources.Solve360CompositeDataSource;
        import com.easyinsight.datasources.Solve360CompositeDataSource;
        import com.easyinsight.framework.Credentials;

        import mx.controls.Button;

        [Bindable]
        private var url:String;
        [Bindable]
        private var usernameInputText:String;
        [Bindable]
        private var password:String;

        public function setupButton(button:Button):Function {
            return null;
        }

        public function get dataSourceDefinition():FeedDefinitionData {
            return new Solve360CompositeDataSource();
        }

        public function set dataSourceDefinition(feedDefinition:FeedDefinitionData):void {
            var ds:Solve360CompositeDataSource = feedDefinition as Solve360CompositeDataSource;

        }

        public function get savesCredentials():Boolean {
            return false;
        }

        public function updateDataSource(feedDefinition:FeedDefinitionData):void {
            var ds:Solve360CompositeDataSource = feedDefinition as Solve360CompositeDataSource;
            ds.userEmail = userNameInput.text;
            ds.authKey = passwordInput.text;
        }

        public function validate():Boolean {
            return true;
        }]]></mx:Script>
    <mx:Form>
		<mx:FormItem label="Solve360 Email" direction="horizontal" fontWeight="bold" fontFamily="Tahoma">
			<mx:TextInput id="userNameInput" fontWeight="normal" fontFamily="Lucida Grande" text="{usernameInputText}"/>
		</mx:FormItem>
        <mx:FormItem label="Solve360 API Key: " direction="horizontal" fontWeight="bold" fontFamily="Tahoma">
			<mx:TextInput id="passwordInput" displayAsPassword="true" fontWeight="normal" fontFamily="Lucida Grande" text="{password}"/>
		</mx:FormItem>
	</mx:Form>
</mx:HBox>