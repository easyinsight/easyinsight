<?xml version="1.0" ?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" implements="com.easyinsight.customupload.IServerDataSourceCreation">
    <mx:Metadata>
		[Event(name="userConfigComplete", type="com.easyinsight.customupload.UploadConfigEvent")]
		[Event(name="userConfigCancel", type="com.easyinsight.customupload.UploadConfigEvent")]
	</mx:Metadata>
    <mx:Script><![CDATA[
        import com.easyinsight.administration.feed.FeedDefinitionData;
        import com.easyinsight.datasources.WholeFoodsDataSource;
        import com.easyinsight.framework.Credentials;
        import com.easyinsight.framework.CredentialsCache;

        [Bindable]
        private var userName:String;

        public function get dataSourceDefinition():FeedDefinitionData {
            var obj:WholeFoodsDataSource = new WholeFoodsDataSource();
            obj.wfUserName = userNameInput.text;
            obj.wfPassword = passwordInput.text;
            return obj;
        }

        public function set dataSourceDefinition(feedDefinition:FeedDefinitionData):void {
            var ds:WholeFoodsDataSource = feedDefinition as WholeFoodsDataSource;
            CredentialsCache.getCache().nukeCredentials(ds.dataFeedID);
            userName = ds.wfUserName;
        }

        public function get savesCredentials():Boolean {
            return false;
        }

        public function updateDataSource(feedDefinition:FeedDefinitionData):void {
            var ds:WholeFoodsDataSource = feedDefinition as WholeFoodsDataSource;
            ds.wfUserName = userNameInput.text;
            ds.wfPassword = passwordInput.text;
        }

        public function get credentials():Credentials {
            return new Credentials();
        }

        public function set credentials(c:Credentials):void {
        }

        public function validate():Boolean {
            return true;
        }]]></mx:Script>
    <mx:Form>
        <mx:FormItem label="Whole Foods User Name: " direction="horizontal" fontWeight="bold" fontFamily="Tahoma">
			<mx:TextInput id="userNameInput" fontWeight="normal" fontFamily="Lucida Grande" text="{userName}"/>
		</mx:FormItem>
        <mx:FormItem label="Whole Foods Password: " direction="horizontal" fontWeight="bold" fontFamily="Tahoma">
			<mx:TextInput id="passwordInput" fontWeight="normal" fontFamily="Lucida Grande" displayAsPassword="true"/>
		</mx:FormItem>
	</mx:Form>
</mx:HBox>