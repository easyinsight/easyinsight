                        </mx:Array>
                    </mx:dataProvider>
                </mx:ToggleButtonBar>
            <mx:Spacer width="100%"/>-->
                <mx:ToggleButtonBar itemClick="updateDisplayMode2()" id="displayTypeBar" selectedIndex="1">
