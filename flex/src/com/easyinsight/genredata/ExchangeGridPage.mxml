                        xmlns:listing="com.easyinsight.listing.*" width="100%" height="100%">
    <mx:Script><![CDATA[
        private function onTagFocus(event:TagFocusEvent):void {
            selectedTag = event.tag;
        }
        ]]></mx:Script>
    <mx:HBox width="100%" height="100%">
        <mx:VBox>
            <mx:HBox>
                <!--<mx:Label text="Sort By:" fontFamily="Tahoma" fontWeight="bold" fontSize="14"/>
                <mx:ComboBox id="sortBox">
                    <mx:dataProvider>
                        <mx:ArrayCollection>
                            <mx:Array>
                                <mx:String>Rating (Best)</mx:String>
                                <mx:String>Rating (Worst)</mx:String>
                                <mx:String>Date Added (Newest)</mx:String>
                                <mx:String>Date Added (Oldest)</mx:String>
                            </mx:Array>
                        </mx:ArrayCollection>
                    </mx:dataProvider>
                </mx:ComboBox>-->
            </mx:HBox>
            <mx:Spacer height="30"/>
            <mx:HBox width="100%" horizontalAlign="center">
                <mx:Label text="Popular Tags" fontFamily="Tahoma" fontWeight="bold" fontSize="14"/>
            </mx:HBox>
            <listing:TagListing width="250" borderStyle="solid" borderThickness="1" tagFocus="onTagFocus(event)"/>
        </mx:VBox>
        <mx:DataGrid dataProvider="{dataProvider2}" width="100%" height="100%">
        <mx:columns>
            <mx:DataGridColumn headerText="Name" dataField="name"/>
            <mx:DataGridColumn headerText="Author" dataField="author" width="120"/>
            <mx:DataGridColumn headerText="Rating" dataField="name"
                               itemRenderer="com.easyinsight.genredata.ExchangeRatingRenderer" width="120"/>
            <mx:DataGridColumn headerText="" dataField="name" sortable="false"
                               itemRenderer="com.easyinsight.genredata.ExchangeActionRenderer" width="50"/>
        </mx:columns>
    </mx:DataGrid>
    </mx:HBox>

