<?xml version="1.0" ?>
<genredata:ExchangePage xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:genredata="com.easyinsight.genredata.*"
                        xmlns:listing="com.easyinsight.listing.*" width="100%" height="100%" paddingLeft="1" paddingRight="2">
    <mx:Script><![CDATA[



        [Bindable]
        private var _itemRenderer:IFactory;

        public function set itemRenderer(value:IFactory):void {
            _itemRenderer = value;
        }

        override protected function commitProperties():void {
            super.commitProperties();
            if (loading) {
                summaryIndex = 0;
            } else {
                summaryIndex = 1;
            }
        }

        [Bindable]
        private var summaryIndex:int = 0;
        ]]>
    </mx:Script>
    <mx:ViewStack width="100%" height="100%" selectedIndex="{summaryIndex}">
        <mx:Box width="100%" height="100%" horizontalAlign="center" verticalAlign="middle">
            <mx:ProgressBar indeterminate="{summaryIndex == 0}" label="Loading the available reports..."/>
        </mx:Box>
        <mx:Canvas width="100%" height="100%">
            <mx:TileList dataProvider="{dataProvider2}" itemRenderer="{_itemRenderer}" height="100%" width="100%" rowHeight="200" columnWidth="182"
                    />
        </mx:Canvas>
    </mx:ViewStack>
</genredata:ExchangePage>