<?xml version="1.0" ?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:analysis="com.easyinsight.analysis.*">
    <mx:states>
        <mx:State name="Measure">
            <mx:AddChild relativeTo="{typeBox}">
                <mx:VBox>
                    <mx:ComboBox dataProvider="{measures}"/>
                    <analysis:AnalysisItemEditor/>
                </mx:VBox>
            </mx:AddChild>
        </mx:State>
        <mx:State name="Calculation">
            <mx:AddChild relativeTo="{typeBox}">
                <analysis:CalculationWindow/>
            </mx:AddChild>
        </mx:State>
    </mx:states>
    <mx:Script><![CDATA[
        import mx.collections.ArrayCollection;

        [Bindable]
        private var measures:ArrayCollection;
        ]]></mx:Script>
    <mx:VBox>
        <mx:HBox>
            <mx:RadioButtonGroup id="typeGroup"/>
            <mx:RadioButton label="Measure" group="{typeGroup}" value="measure" id="measure"/>
            <mx:RadioButton label="Calculation" group="{typeGroup}" value="calculation" id="calculation"/>
        </mx:HBox>
        <mx:Box id="typeBox"/>
    </mx:VBox>
</mx:TitleWindow>