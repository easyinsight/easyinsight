<?xml version="1.0" ?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" backgroundColor="#DCE2F8" borderThickness="1" cornerRadius="15" dropShadowEnabled="true">
    <mx:Script><![CDATA[
        import com.easyinsight.solutions.Solution;
import mx.collections.ArrayCollection;

        [Bindable]
        private var newSolutions:ArrayCollection = new ArrayCollection();

        public function addSolution(solution:Solution):void {
            newSolutions.addItem(solution);
        }
]]></mx:Script>
    <mx:VBox verticalGap="0" width="100%">
        <mx:Box width="100%" height="5" backgroundColor="#10319A" left="0" right="0"/>
        <mx:Box width="100%" backgroundColor="#3B56AF" horizontalAlign="center">
            <mx:Label text="New Solutions to be Installed" color="0xFFFFFF"/>
        </mx:Box>
        <mx:List dataProvider="{newSolutions}" width="100%"/>
    </mx:VBox>
</mx:Canvas>