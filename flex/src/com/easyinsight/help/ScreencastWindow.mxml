<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="640" height="520">
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			import mx.controls.SWFLoader;
			private var _screencast:Screencast;
			
			public function set screencast(screencast:Screencast):void {				
				var swfLoader:SWFLoader = new SWFLoader();
				swfLoader.source = screencast.source;				
				coreBox.addChildAt(swfLoader, 0);
			}
			
			private function closeWindow():void {
				PopUpManager.removePopUp(this);
			}
		]]>
	</mx:Script>
	<mx:VBox id="coreBox" width="100%" height="100%">
		<mx:HBox width="100%" horizontalAlign="center">
			<mx:Button label="Close" click="closeWindow()"/>
		</mx:HBox>	
	</mx:VBox>
	
</mx:TitleWindow>
