<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="700" height="500">
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			public static function createHelpWindow(helpClass:Class, parent:DisplayObject):void {
				var helpWindow:HelpWindow = HelpWindow(PopUpManager.createPopUp(parent, HelpWindow, false));
				helpWindow.coreBox.addChildAt(new helpClass, 0);
				PopUpManager.centerPopUp(helpWindow);
			}
			
			private function closeWindow():void {
				PopUpManager.removePopUp(this);
			}
		]]>
	</mx:Script>
	<mx:VBox id="coreBox" width="100%" height="100%" paddingTop="10" paddingLeft="10" paddingRight="10" paddingBottom="10">
		<mx:HBox width="100%" horizontalAlign="center">
			<mx:Button label="Close" click="closeWindow()"/>
		</mx:HBox>	
	</mx:VBox>
</mx:TitleWindow>
