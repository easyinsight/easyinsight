<?xml version="1.0" ?>
<mx:Box xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" horizontalAlign="center" verticalAlign="middle">
    <mx:Script><![CDATA[
        import mx.modules.IModuleInfo;

        [Bindable]
        private var _moduleInfo:IModuleInfo;

        private var _message:String = "Loading module for display...";


        [Bindable(event="messageChanged")]
        public function get message():String {
            return _message;
        }

        public function set message(value:String):void {
            if (_message == value) return;
            _message = value;
            dispatchEvent(new Event("messageChanged"));
        }

        public function set moduleInfo(val:IModuleInfo):void {
            _moduleInfo = val;
        }]]></mx:Script>
    <mx:ProgressBar id="progressBar" source="{_moduleInfo}" label="{message}" fontSize="18"/>
</mx:Box>