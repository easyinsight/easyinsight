<?xml version="1.0"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" icon="@Embed(source='../../../../assets/note.png')" label="About This Report"
        paddingLeft="10" paddingTop="10"
         paddingBottom="10" width="100%">
    <mx:Script><![CDATA[

        [Bindable]
        private var reportName:String;

        [Bindable]
        private var reportDescription:String;

        private var _report:AnalysisDefinition;

        protected override function commitProperties():void {
            super.commitProperties();
            if (_report != null) {
                reportName = _report.name;
                reportDescription = _report.description;
            }
        }

        public function set report(value:AnalysisDefinition):void {
            _report = value;
            invalidateProperties();
        }]]></mx:Script>
    <mx:Form>
        <mx:FormItem label="Report Name:">
            <mx:TextInput text="{reportName}" width="650" fontSize="14" editable="false" borderStyle="inset" borderThickness="1"
                    backgroundAlpha="0"/>
        </mx:FormItem>
        <mx:FormItem label="Report Description:">
            <mx:TextArea width="650" height="65" id="reportDescriptionInput" backgroundAlpha="0" editable="false"
                                         text="{reportDescription}" fontSize="14" borderStyle="inset" borderThickness="1"/>
        </mx:FormItem>
    </mx:Form>
</mx:HBox>
