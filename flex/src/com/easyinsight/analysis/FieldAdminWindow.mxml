<?xml version="1.0"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" label="Data Source Field Config" paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10">
    <mx:Script><![CDATA[
        private var _analysisItem:AnalysisItem;

        [Bindable]
        private var kpi:Boolean;

        public function set analysisItem(value:AnalysisItem):void {
            _analysisItem = value;
            if (_analysisItem != null) {
                kpi = _analysisItem.kpi;
            }
        }

        public function save(analysisItem:AnalysisItem):void {
            analysisItem.kpi = kpiCheckbox.selected;
        }
        ]]></mx:Script>
    <mx:Form>
        <mx:FormItem label="Should this field be available as a data source level field?">
            <mx:CheckBox id="kpiCheckbox" selected="{kpi}"/>
        </mx:FormItem>
    </mx:Form>
</mx:VBox>
