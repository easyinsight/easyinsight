<?xml version="1.0" encoding="utf-8"?>
<mx:ComboBox xmlns:mx="http://www.adobe.com/2006/mxml" selectedIndex="0" rowCount="6">
	<mx:Script>
		<![CDATA[
			public function set formattingConfiguration(formatType:int):void {
				switch (formatType) {
					case FormattingConfiguration.NUMBER:
						selectedIndex = 0;
						break;
					case FormattingConfiguration.CURRENCY:
						selectedIndex = 1;
						break;
					case FormattingConfiguration.PERCENTAGE:
						selectedIndex = 2;
						break;
                    case FormattingConfiguration.MILLISECONDS:
                        selectedIndex = 3;
                        break;
                    case FormattingConfiguration.SECONDS:
                        selectedIndex = 4;
                        break;
                    case FormattingConfiguration.BYTES:
                        selectedIndex = 5;
                        break;
				}				
			}		
		
			public function get formattingConfiguration():int {
                return selectedIndex + 1;
			}
		]]>
	</mx:Script>
    <mx:dataProvider>
        <mx:ArrayCollection>
            <mx:Array>
                <mx:Object label="Number" data="{FormattingConfiguration.NUMBER}" value="Number"/>
                <mx:Object label="Currency" data="{FormattingConfiguration.CURRENCY}" value="Currency"/>
                <mx:Object label="Percentage" data="{FormattingConfiguration.PERCENTAGE}" value="Percentage"/>
                <mx:Object label="Interval (milliseconds)" data="{FormattingConfiguration.MILLISECONDS}" value="Interval (milliseconds)"/>
                <mx:Object label="Interval (seconds)" data="{FormattingConfiguration.SECONDS}" value="Interval (seconds)"/>
                <mx:Object label="Bytes" data="{FormattingConfiguration.BYTES}" value="Bytes"/>
            </mx:Array>
        </mx:ArrayCollection>
    </mx:dataProvider>

</mx:ComboBox>
