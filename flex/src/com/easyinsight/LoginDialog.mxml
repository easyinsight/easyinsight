<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:framework="com.easyinsight.framework.*"
                title="Login" removedEffect="{dissolveOut}" creationCompleteEffect="{dissolveIn}">
    <framework:LoginComponent loginEvent2="PopUpManager.removePopUp(this)" loginClose="PopUpManager.removePopUp(this)"
            showActivation="{_showActivation}" cancelVisible="true" additionalInfo="{_additionalInfo}"/>
    <mx:Dissolve id="dissolveOut" duration="500" alphaFrom="1.0" alphaTo="0.0"/>
    <mx:Dissolve id="dissolveIn" duration="500" alphaFrom="0.0" alphaTo="1.0"/>
    <mx:Script><![CDATA[
        import mx.managers.PopUpManager;

        [Bindable]
        private var _showActivation:Boolean;

        [Bindable]
        private var _additionalInfo:String;


        public function set additionalInfo(value:String):void {
            _additionalInfo = value;
        }

        public function set showActivation(value:Boolean):void {
            _showActivation = value;
        }]]></mx:Script>
</mx:TitleWindow>
