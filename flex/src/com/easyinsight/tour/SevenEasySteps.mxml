            </mx:AddChild>
        </mx:State>
        <mx:State name="Step7">
            <mx:RemoveChild target="{startBox}"/>
            <mx:AddChild relativeTo="{coreBox}">
                <mx:VBox horizontalAlign="center" width="100%">
                    <help:ScreencastView screencastSource="../assets/lesson1/training.mp4" width="680" height="520" id="step7"
                        addedToStage="videoDisplay = step7"/>
                </mx:VBox>
            </mx:AddChild>
        </mx:State>
    </mx:states>
    <mx:HBox width="100%">
        <mx:Button label="Take me back to the start" click="dispatchEvent(new TourEvent())"/>
        <mx:Spacer width="100%"/>
        <mx:Label text="Seven Easy Steps to Full Business Visibility" fontSize="18" fontFamily="Tahoma" fontWeight="bold"/>
        <mx:Spacer width="100%"/>
    </mx:HBox>
    <mx:HBox width="100%" height="100%">
        <mx:VBox height="100%">
            <mx:Button styleName="blueButton" label="Why Easy Insight" click="stopVideo(); currentState=''"/>
            <mx:HRule/>
            <mx:Spacer height="100%"/>
            <mx:Button styleName="blueButton" label="Step 1 - First SaaS Integration" click="stopVideo(); currentState='Step1'"/>
            <mx:Button styleName="blueButton" label="Step 2 - Creating Reports" click="stopVideo(); currentState='Step2'"/>
            <mx:Button styleName="blueButton" label="Step 3 - Uploading Custom Data" click="stopVideo(); currentState='Step3'"/>
            <mx:Button styleName="blueButton" label="Step 4 - Exporting Your Data" click="stopVideo(); currentState='Step4'"/>
            <mx:Button styleName="blueButton" label="Step 5 - Querying Your Databases" click="stopVideo(); currentState='Step5'" enabled="false"/>
            <mx:Button styleName="blueButton" label="Step 6 - Introducing KPI Trees" click="stopVideo(); currentState='Step6'" enabled="false"/>
            <mx:Button styleName="blueButton" label="Step 7 - Bringing It All Together" click="stopVideo(); currentState='Step7'" enabled="false"/>
            <mx:Spacer height="100%"/>
        </mx:VBox>
        <mx:Box id="coreBox" width="100%" height="100%">
            <mx:VBox horizontalAlign="center" width="100%" id="startBox">
                <help:ScreencastView screencastSource="../assets/lesson1/training.mp4" width="680" height="520" id="defaultVideo"
                        addedToStage="videoDisplay = defaultVideo"/>
            </mx:VBox>
        </mx:Box>
    </mx:HBox>
    <mx:Script><![CDATA[
        import com.easyinsight.help.ScreencastWindow;

        import com.easyinsight.util.PopUpUtil;

        import mx.managers.PopUpManager;

        [Bindable]
        [Embed(source="../../../../assets/media_play.png")]
        private var pointerIcon:Class;

        private var videoDisplay:ScreencastView = defaultVideo;

        public function stopVideo():void {
            videoDisplay.stop();
        }

        private function playVideo(video:String):void {
            var window:ScreencastWindow = new ScreencastWindow();
            window.screencastSource = video;
            PopUpManager.addPopUp(window, this);
            PopUpUtil.centerPopUp(window);
        }
        ]]></mx:Script>
</mx:VBox>