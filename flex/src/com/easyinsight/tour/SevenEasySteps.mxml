<?xml version="1.0" ?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:help="com.easyinsight.help.*"  width="1000" height="560">
    <mx:Metadata>
        [Event(name="backToWindow", type="com.easyinsight.tour.TourEvent")]
    </mx:Metadata>
    <mx:states>
        <mx:State name="Step1">
            <mx:RemoveChild target="{startBox}"/>
            <mx:AddChild relativeTo="{coreBox}">
                <mx:VBox horizontalAlign="center" width="100%">
                    <help:ScreencastView screencastSource="../assets/Step 1/Step 1.mp4" width="680" height="520" id="step1"
                        addedToStage="videoDisplay = step1"/>
                </mx:VBox>
            </mx:AddChild>
        </mx:State>
        <mx:State name="Step2">
            <mx:RemoveChild target="{startBox}"/>
            <mx:AddChild relativeTo="{coreBox}">
                <mx:VBox horizontalAlign="center" width="100%">
                    <help:ScreencastView screencastSource="../assets/Step 2/Step 2.mp4" width="680" height="520" id="step2"
                        addedToStage="videoDisplay = step2"/>
                </mx:VBox>
            </mx:AddChild>
        </mx:State>
        <mx:State name="Step3">
            <mx:RemoveChild target="{startBox}"/>
            <mx:AddChild relativeTo="{coreBox}">
                <mx:VBox horizontalAlign="center" width="100%">
                    <help:ScreencastView screencastSource="../assets/Step 3/Step 3.mp4" width="680" height="520" id="step3"
                        addedToStage="videoDisplay = step3"/>
                </mx:VBox>
            </mx:AddChild>
        </mx:State>
        <mx:State name="Step4">
            <mx:RemoveChild target="{startBox}"/>
            <mx:AddChild relativeTo="{coreBox}">
                <mx:VBox horizontalAlign="center" width="100%">
                    <help:ScreencastView screencastSource="../assets/Step 4/Step 4.mp4" width="680" height="520" id="step4"
                        addedToStage="videoDisplay = step4"/>
                </mx:VBox>
            </mx:AddChild>
        </mx:State>
        <mx:State name="Step5">
            <mx:RemoveChild target="{startBox}"/>
            <mx:AddChild relativeTo="{coreBox}">
                <mx:VBox horizontalAlign="center" width="100%">
                    <help:ScreencastView screencastSource="../assets/lesson1/training.mp4" width="680" height="520" id="step5"
                        addedToStage="videoDisplay = step5"/>
                </mx:VBox>
            </mx:AddChild>
        </mx:State>
        <mx:State name="Step6">
            <mx:RemoveChild target="{startBox}"/>
            <mx:AddChild relativeTo="{coreBox}">
