<?xml version="1.0" ?>
<util:EITitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:util="com.easyinsight.util.*">
    <mx:Script><![CDATA[
        import mx.managers.PopUpManager;

        private var _url:String;


        [Bindable(event="urlChanged")]
        public function get url():String {
            return _url;
        }

        public function set url(value:String):void {
            if (_url == value) return;
            _url = value;
            dispatchEvent(new Event("urlChanged"));
        }]]></mx:Script>
    <mx:VBox>
        <mx:Text text="{url}" selectable="true"/>
        <mx:HBox width="100%" horizontalAlign="center">
            <mx:Button label="Copy to Clipboard" click="System.setClipboard(url)"/>
            <mx:Button label="Close" click="PopUpManager.removePopUp(this)"/>
        </mx:HBox>
    </mx:VBox>
</util:EITitleWindow>