<?xml version="1.0"?>
<util:EISlimWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:util="com.easyinsight.util.*" width="520">
    <mx:Script><![CDATA[
        import mx.managers.PopUpManager;

        [Bindable]
        private var url:String;

        public var urlKey:String;

        override protected function commitProperties():void {
            super.commitProperties();
            url = "https://www.easy-insight.com/app/reports/" + urlKey + ".json";
        }

        private function onClick():void {
            navigateToURL(new URLRequest(url));
        }
        ]]></mx:Script>
    <mx:Text text="You can open this report in JSON format by doing the following:" width="460"/>
    <mx:Text text="{url}" selectable="true" click="onClick()" textDecoration="underline" width="460"/>
    <mx:Text text="Authentication to this JSON URL uses either your Easy Insight credentials or your key/secret key as found under your profile." width="460"/>
    <mx:HBox width="100%" horizontalAlign="center">
        <util:SaveButton label="Close" click="PopUpManager.removePopUp(this)"/>
    </mx:HBox>
</util:EISlimWindow>
