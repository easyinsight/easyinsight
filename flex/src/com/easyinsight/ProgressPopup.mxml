				PopUpManager.removePopUp(this);
			}
		]]>
	</mx:Script>
	<mx:ProgressBar x="89" y="117" mode="manual" indeterminate="true"/>	
	<mx:Label x="89" y="69" text="{text}"/>
</mx:TitleWindow>
