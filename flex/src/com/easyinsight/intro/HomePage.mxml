<?xml version="1.0" ?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml">
    <mx:Script><![CDATA[
        import mx.collections.ArrayCollection;
        [Bindable]
        [Embed(source="../../../../assets/data.png")]
        private var dataImage:Class;

        [Bindable]
        private var dataSources:ArrayCollection;

        [Bindable]
        private var reports:ArrayCollection;
]]></mx:Script>
    <mx:Box width="100%" height="5" backgroundColor="#D42525" left="0" right="0"/>
    <mx:Box width="100%" height="100%" horizontalAlign="center" backgroundColor="#818285">
        <mx:Grid width="800" height="100%" backgroundColor="#FFFFFF">
            <mx:GridRow width="100%" height="50%">
                <mx:GridItem width="50%" height="100%" borderThickness="1" borderColor="#818285" borderStyle="solid">
                    <mx:VBox>
                        <mx:HBox>
                            <mx:Image source="{dataImage}"/>
                            <mx:Label text="Recent Data Sources"/>
                        </mx:HBox>
                        <mx:List dataProvider="{dataSources}"/>
                    </mx:VBox>
                </mx:GridItem>
                <mx:GridItem width="50%" height="100%" borderThickness="1" borderColor="#818285" borderStyle="solid">
                    <mx:VBox>
                        <mx:HBox>
                            <mx:Image source="{dataImage}"/>
                            <mx:Label text="Recent Reports"/>
                        </mx:HBox>
                        <mx:List dataProvider="{reports}"/>
                    </mx:VBox>
                </mx:GridItem>
            </mx:GridRow>
            <mx:GridRow width="100%" height="50%">
                <mx:GridItem width="50%" height="100%" borderThickness="1" borderColor="#818285" borderStyle="solid">
                    <mx:VBox>
                        <mx:HBox>
                            <mx:Image source="{dataImage}"/>
                            <mx:Label text="Goal Status"/>
                        </mx:HBox>

                    </mx:VBox>
                </mx:GridItem>
                <mx:GridItem width="50%" height="100%" borderThickness="1" borderColor="#818285" borderStyle="solid">
                    <mx:VBox>
                        <mx:HBox>
                            <mx:Image source="{dataImage}"/>
                            <mx:Label text="Account Usage"/>
                        </mx:HBox>

                    </mx:VBox>
                </mx:GridItem>
            </mx:GridRow>
        </mx:Grid>
    </mx:Box>
</mx:Canvas>