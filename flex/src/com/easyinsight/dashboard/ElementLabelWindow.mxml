<?xml version="1.0"?>
<util:EITitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:util="com.easyinsight.util.*">
    <mx:Script><![CDATA[
        import mx.managers.PopUpManager;

        public var dashboardElement:DashboardElement;

        [Bindable]
        public var elementLabel:String;

        private function save():void {
            dashboardElement.label = labelInput.text;
            dispatchEvent(new Event(Event.CHANGE));
            PopUpManager.removePopUp(this);
        }
        ]]></mx:Script>
    <mx:Form>
        <mx:FormItem label="Label:">
            <mx:TextInput id="labelInput" text="{elementLabel}"/>
        </mx:FormItem>
    </mx:Form>
    <mx:HBox horizontalAlign="center" width="100%">
        <util:SaveButton label="Save" click="save()"/>
        <util:CancelButton label="Cancel" click="PopUpManager.removePopUp(this)"/>
    </mx:HBox>
</util:EITitleWindow>
