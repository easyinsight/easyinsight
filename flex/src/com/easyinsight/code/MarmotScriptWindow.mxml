<?xml version="1.0"?>
<util:EITitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:util="com.easyinsight.util.*" backgroundColor="#FFFFFF">
    <mx:Script><![CDATA[
        import mx.managers.PopUpManager;

        private var _script:String;

        [Bindable(event="scriptChanged")]
        public function get script():String {
            return _script;
        }

        public function set script(value:String):void {
            if (_script == value) return;
            _script = value;
            dispatchEvent(new Event("scriptChanged"));
        }

        private function save():void {
            dispatchEvent(new MarmotScriptEvent(MarmotScriptEvent.SAVE_SCRIPT, scriptArea.text));
            PopUpManager.removePopUp(this);
        }
        ]]></mx:Script>
    <mx:TextArea editable="true" borderStyle="solid" borderThickness="1" width="700"
                 height="400" id="scriptArea" text="{script}"/>
    <mx:HBox width="100%" horizontalAlign="center">
        <util:SaveButton label="Save" click="save()"/>
        <util:CancelButton label="Cancel" click="PopUpManager.removePopUp(this)"/>
    </mx:HBox>
</util:EITitleWindow>
