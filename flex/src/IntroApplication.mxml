                <mx:SetStyleAction target="{improvementLabel}" name="color" value="#FFFFFF"/>
                <mx:Fade target="{visibilityBox}" duration="1000" alphaFrom="1.0" alphaTo="0.0"/>
                <mx:RemoveChildAction/>
                <mx:AddChildAction/>
