<?xml version="1.0" ?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:util="com.easyinsight.util.*"
        paddingBottom="0" paddingLeft="0" paddingTop="0" paddingRight="0"
        left="0" top="0" bottom="0" right="0" backgroundAlpha="0">
    <mx:Script><![CDATA[
        import mx.collections.ArrayCollection;

        [Bindable]
        private var logos:ArrayCollection = new ArrayCollection([
            "../assets/logos/Amazon Logo.gif", "../assets/logos/Basecamp Logo.png",
            "../assets/logos/Google Analytics Logo.gif", "../assets/logos/Google Docs Logo.gif",
            "../assets/logos/Highrise Logo.png",
            "../assets/logos/JIRA Logo.gif", "../assets/logos/MySQL Logo.gif", "../assets/logos/Oracle Logo.gif",
            "../assets/logos/Salesforce Logo.gif", "../assets/logos/SQL Server Logo.gif", null]);
        ]]></mx:Script>
    <mx:Box backgroundColor="#FFFFFF" width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
    <util:ImageVScroller id="scroller" dataProvider="{logos}"
                         itemRenderer="com.easyinsight.util.LogoRenderer" direction="up" width="250" height="180"
                         horizontalCenter="0" verticalCenter="0"/>
    </mx:Box>
</mx:Application>