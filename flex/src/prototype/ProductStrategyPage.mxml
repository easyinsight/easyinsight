<?xml version="1.0" ?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:twitter="com.easyinsight.twitter.*" width="100%"
         horizontalAlign="center">
    <mx:Metadata>
        [Event(name="navigation", type="prototype.PrototypeEvent")]
    </mx:Metadata>
    <mx:Script><![CDATA[

        [Bindable]
        [Embed(source="../../assets/logo2.PNG")]
        private var logo:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/film.png")]
        private var film:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/message.png")]
        private var message:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/mouse.png")]
        private var mouse:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/ReverseGray.jpg")]
        private var banner:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/KPI-Tree-1.jpg")]
        private var kpiTree:Class;
        ]]></mx:Script>
    <mx:VBox width="1000" height="100%" verticalGap="0">
        <mx:HBox width="100%" styleName="Cell" height="70">
            <mx:Box height="100%" width="2" backgroundColor="#DDDDDD"/>
            <mx:Box width="300" verticalAlign="middle" height="100%" horizontalAlign="center">
                <mx:Image source="{logo}" click="dispatchEvent(new PrototypeEvent(''))"/>
            </mx:Box>
            <mx:VBox width="100%" height="100%" paddingRight="15">
                <mx:HBox horizontalAlign="right" width="100%" height="50%" paddingTop="5">
                    <mx:Button label="Sign In" styleName="redButton"/>
                    <mx:Button label="Sign Up for Free Account" styleName="redButton"/>
                </mx:HBox>
                <mx:Spacer height="100%"/>
                <mx:HBox width="100%" styleName="HeaderLink" height="50%" paddingBottom="5">
                    <mx:Label text="PRODUCT" color="#cc0033"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="DATA"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="BLOG"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="CUSTOMERS"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="PARTNERS"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="COMPANY"/>
                </mx:HBox>
            </mx:VBox>
            <mx:Box height="100%" width="2" backgroundColor="#DDDDDD"/>
        </mx:HBox>
        <mx:HBox backgroundColor="#DDDDDD" width="100%" paddingBottom="5" paddingTop="5">
            <mx:HBox width="100%" styleName="SubHeaderLink" paddingLeft="15" paddingRight="15">
                <mx:Label text="OVERVIEW" click="dispatchEvent(new PrototypeEvent('ProductOverview'))"/>
                <mx:Spacer width="100%"/>
                <mx:Label text="VISUALIZATION" click="dispatchEvent(new PrototypeEvent('ProductVisualization'))"/>
                <mx:Spacer width="100%"/>
                <mx:Label text="STRATEGY" color="#cc0033"/>
                <mx:Spacer width="100%"/>
                <mx:Label text="DASHBOARDS" click="dispatchEvent(new PrototypeEvent('ProductDashboards'))"/>
                <mx:Spacer width="100%"/>
                <mx:Label text="DEVELOPERS"/>
                <mx:Spacer width="100%"/>
                <mx:Label text="SERVICES"/>
            </mx:HBox>
        </mx:HBox>
        <mx:Canvas width="1000" backgroundColor="#FFFFFF" height="100%">
            <mx:Canvas x="700" backgroundColor="#DDDDDD" height="100%" width="300"/>
            <mx:VBox width="100%" verticalGap="0">
                <mx:HBox width="100%" horizontalGap="0">
                    <mx:VBox styleName="Cell" horizontalAlign="center" width="700" verticalGap="0">
                        <mx:HBox verticalAlign="middle" horizontalAlign="center"
                                 width="100%" backgroundImage="{banner}" backgroundSize="100%" height="60">
                            <mx:Label text="Meeting your Business Goals" fontFamily="Tahoma" fontSize="24"
                                      color="#FFFFFF"/>
                        </mx:HBox>
                        <mx:HBox width="100%" height="100%">
                            <mx:VBox height="100%" width="2" backgroundColor="#DDDDDD"/>
                            <mx:VBox width="100%" height="100%" paddingTop="5">
                                <mx:VBox width="100%">
                                    <mx:Label text="Full Business Visibility"
                                              styleName="Header"/>
                                    <mx:TextArea
                                            text="Reports by themselves give you views into particular silos of your business. However, you as an executive want full business visibility--not just the sales department report, or just the marketing analysis, but the combined view of performance across whole sales and marketing campaigns. Easy Insight brings you the concept of fully interactive KPI trees to enable the quick mapping of high level business strategy into concrete objectives, providing an ongoing scorecard into performance across the whole business."
                                            styleName="PageContent" editable="false"
                                            selectable="false" width="100%" height="120"/>
                                </mx:VBox>
                                <mx:HBox width="100%">
                                    <mx:VBox width="100%">
                                        <mx:Label text="Quick KPI Tree Design"
                                                  styleName="Header"/>
                                        <mx:TextArea
                                                text="Easy Insight enables you to quickly assemble KPI trees by sketching out your own goals or adding whole templates of other KPI trees from your industry. Working on tracking and improving the results from your sales and marketing campaign? Drag in a standard sales and marketing KPI tree, drag a web analytics tree onto that, add a few custom goals specific to your business, and you have a whole model from the high level goal of increasing sales down into the lower level objectives of improving website conversion rates and improving pipeline stage conversions."
                                                styleName="PageContent" editable="false"
                                                selectable="false" width="100%" height="240"/>                                        
                                    </mx:VBox>
                                    <mx:VBox width="370" horizontalAlign="center">
                                        <mx:Image source="{kpiTree}"/>
                                    </mx:VBox>
                                </mx:HBox>
                                <mx:VBox width="100%">
                                    <mx:Label text="Effortless Navigation Across the Business"
                                              styleName="Header"/>
                                    <mx:TextArea
                                            text="KPI trees can easily be connected together to create a layered view of the business. You can easily start with creating a set of goals specific to a particular small division. Once those goals are being met, gradually expand out to broader business units or down into even more specific objectives. You gain greater and greater visibility across your organization, making sure that your company meets goals of continuous business improvement."
                                            styleName="PageContent" editable="false"
                                            selectable="false" width="100%" height="80"/>
                                </mx:VBox>
                            </mx:VBox>
                        </mx:HBox>

                    </mx:VBox>
                    <mx:VBox horizontalAlign="center" width="100%" paddingTop="10">
                        <mx:VBox width="280" backgroundColor="#786e78" borderStyle="solid" cornerRadius="15"
                                 paddingLeft="5"
                                 paddingRight="5"
                                 paddingTop="5" paddingBottom="5" height="220" verticalAlign="middle"
                                 buttonMode="true" borderColor="#786e78" borderThickness="2"
                                 horizontalAlign="center">
                            <mx:Label text="Want more info?" fontSize="16" color="#FFFFFF"/>
                            <mx:Box width="100%" height="100%" horizontalAlign="center" verticalAlign="middle"
                                    backgroundColor="#FFFFFF"
                                    borderStyle="solid" borderColor="#FFFFFF" borderThickness="1"
                                    cornerRadius="5">
                                <mx:Grid width="100%">
                                    <mx:GridRow>
                                        <mx:GridItem>
                                            <mx:Image source="{film}"/>
                                        </mx:GridItem>
                                        <mx:GridItem verticalAlign="middle">
                                            <mx:Label text="Watch Product Tour" fontSize="16"
                                                      textDecoration="underline"/>
                                        </mx:GridItem>
                                    </mx:GridRow>
                                    <mx:GridRow>
                                        <mx:GridItem>
                                            <mx:Image source="{mouse}"/>
                                        </mx:GridItem>
                                        <mx:GridItem verticalAlign="middle">
                                            <mx:Label text="Free Trial Account" fontSize="16"
                                                      textDecoration="underline"/>
                                        </mx:GridItem>
                                    </mx:GridRow>
                                    <mx:GridRow>
                                        <mx:GridItem>
                                            <mx:Image source="{message}"/>
                                        </mx:GridItem>
                                        <mx:GridItem verticalAlign="middle">
                                            <mx:Label text="Contact Us" fontSize="16"
                                                      textDecoration="underline"/>
                                        </mx:GridItem>
                                    </mx:GridRow>
                                </mx:Grid>
                            </mx:Box>
                        </mx:VBox>
                        <mx:Box width="280" backgroundColor="#FFFFFF" borderStyle="solid" cornerRadius="15"
                                paddingLeft="5"
                                paddingRight="5"
                                paddingTop="5" paddingBottom="5" verticalAlign="middle"
                                buttonMode="true" borderColor="#D42525" borderThickness="2">
                            <twitter:TwitterDisplay person="easyinsight"/>
                        </mx:Box>
                    </mx:VBox>
                </mx:HBox>

            </mx:VBox>
        </mx:Canvas>


        <mx:HBox width="100%" height="100" backgroundColor="#DDDDDD">

        </mx:HBox>
    </mx:VBox>
</mx:VBox>