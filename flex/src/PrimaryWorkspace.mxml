            <mx:HBox width="100%" height="100%" horizontalGap="0" id="primarySpace">
                <mx:HBox width="100%" height="100%" id="coreSpace" paddingLeft="0" paddingTop="0" top="0"
                         paddingRight="0">
                </mx:HBox>
            </mx:HBox>
        </mx:VBox>
     </util:AntiScrollCanvas>
